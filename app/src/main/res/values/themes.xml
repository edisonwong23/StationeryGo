<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StationeryGo" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textFillColor">@color/primaryTextColor</item>
        <item name="textInputOutlinedStyle">@color/primaryTextColor</item>
    </style>

    <style name="inputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
    </style>

    <style name="dropDownBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/primaryTextColor</item>
    </style>

    <style name="CardOutLine" parent="Widget.Material3.CardView.Outlined">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="cardForegroundColor">@android:color/transparent</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="checkedIconTint">#FFFFFF</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="ConfirmButton" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint">#FFA726</item>
    </style>

    <style name="OtherButtons" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#F57F17</item>
    </style>

    <style name="DeleteButtons" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#D50000</item>
        <item name="strokeColor">#D50000</item>
        <item name="iconTint">#D50000</item>
    </style>

    <style name="ProfileButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#000000</item>
        <item name="strokeColor">#000000</item>
        <item name="iconTint">#000000</item>
        <item name="boxStrokeWidth">10dp</item>
    </style>

    <style name="CartOptionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">#000000</item>
        <item name="strokeColor">#FFA726</item>
        <item name="iconTint">#000000</item>
    </style>

    <style name="SelectedCartOptionButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textColor">#FFF3E0</item>
        <item name="colorOnPrimary">#EF6C00</item>
        <item name="backgroundTint">#FFA726</item>
        <item name="iconTint">#F57F17</item>
    </style>

    <style name="buttomShape">
        <item name="cornerSize">0%</item>
    </style>

</resources>